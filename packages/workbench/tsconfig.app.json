{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "incremental": true,
    "types": [
      "@shoelace-style/shoelace/dist/types/vue"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}