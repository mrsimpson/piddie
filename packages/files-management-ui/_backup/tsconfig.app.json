{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "exclude": [
        "src/**/__tests__/*"
    ],
    "compilerOptions": {
        "types": [
            "vue",
            "@shoelace-style/shoelace",
            "@types/wicg-file-system-access"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    }
}